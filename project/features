clear
echo -e "${orange}────────────────────────────────────────${neutral}"
echo -e "${dark_blue_bg}${green}     SYSTEM SETTINGS & FEATURES MENU    ${neutral}"
echo -e "${orange}────────────────────────────────────────${neutral}"
echo -e "   ${green}${r}Today${neutral}     ➤ ${g}$ttoday${neutral}"
echo -e "   ${green}${r}Yesterday${neutral} ➤ ${g}$tyest${neutral}"
echo -e "   ${green}${r}Month${neutral}     ➤ ${g}$tmon${neutral}"
echo -e "${orange}────────────────────────────────────────${neutral}"
echo -e "   ${green}[1]${neutral}   $(print_names "Check Running System")"
echo -e "   ${green}[2]${neutral}   $(print_names "Check Bandwidth Usage")"
echo -e "   ${green}[3]${neutral}   $(print_names "Auto Backup Server")"
echo -e "   ${green}[4]${neutral}   $(print_names "Backup/Restore Server")"
echo -e "   ${green}[5]${neutral}   $(print_names "Port Information")"
echo -e "   ${green}[6]${neutral}   $(print_names "Restart All Services")"
echo -e "   ${green}[7]${neutral}   $(print_names "Change Server Domain")"
echo -e "   ${green}[8]${neutral}   $(print_names "Change Server Banner")"
echo -e "   ${green}[9]${neutral}   $(print_names "Update Dropbear")"
echo -e "   ${green}[10]${neutral}  $(print_names "Update Script")"
echo -e "   ${green}[11]${neutral}  $(print_names "Load Server System")"
echo -e "   ${green}[12]${neutral}  $(print_names "Info Api Service Bot")"
echo -e "   ${green}[13]${neutral}  $(print_names "Change Timezone")"
echo -e "   ${green}[14]${neutral}  $(print_names "Speedtest")"
echo -e "   ${green}[15]${neutral}  $(print_names "Setting Auto Reboot")"
echo -e "   ${green}[16]${neutral}  $(print_names "Reboot Server")"
echo -e "   ${green}[x]${neutral}   $(print_names "Exit System Setting")"
echo -e "${orange}────────────────────────────────────────${neutral}"
print_rainbow "────────────────────────────────────────"
echo -e "          ${orange}───${green}───${yellow}───${blue}───${purple}───${red}───${neutral}"
echo -e ""
read -p " Choose an option (1-16) or type 'x' to exit: " menu
case $menu in
1) running ;;
2) check_bw ;;
3) auto_backup ;;
4) backuprestore server ;;
5) info_port ;;
6) restart_services ;;
7) change_domain ;;
8) nano /etc/gerhanatunnel.txt; clear ;;
9) dropbear_update ;;
10) update_script ;;
11) gotop ;;
12) bot client ;;
13) change_timezone ;;
14) server_benchmark ;;
15) setting_reboot_jam_reboot ;;
16) reboot ;;
x | X)
    echo -e ""
    echo -e "   ${green}Terima kasih telah menggunakan layanan ini.${neutral}"
    exit 0
    ;;
*)
    echo -e "   ${red}Pilihan tidak valid!${neutral}"
    sleep 2
    display_features
    ;;
esac
}
